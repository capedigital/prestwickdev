<script type="text/javascript">
var toggler = document.getElementsByClassName("ph-treecaret");
var i;

for (i = 0; i < toggler.length; i++) {
    toggler[i].addEventListener("click", function() {
        this.parentElement.querySelector(".ph-treenested").classList.toggle("ph-treeactive");
        this.classList.toggle("ph-treecaret-down");
    });
}
</script>
